<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apptest.alice.mytest.AboutMe"
    android:background="@drawable/bg8">

    <TextView
        android:text="@string/about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="@dimen/h1"
        android:textStyle="normal|bold"
        android:layout_margin="@dimen/my_margin" />

    <ImageView
        app:srcCompat="@drawable/aom"
        android:id="@+id/imvMyPic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:layout_margin="@dimen/my_margin"
        android:layout_width="@dimen/my_image"
        android:layout_height="@dimen/my_image" />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBack"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button2"
        android:layout_below="@+id/imvMyPic"
        android:layout_marginBottom="@dimen/my_margin"
        android:layout_margin="@dimen/my_margin"
        android:background="#c8ffffff">

        <TextView
            android:text="@string/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="@dimen/h3"
            android:paddingTop="@dimen/my_margin" />

        <TextView
            android:text="@string/my_workplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="@dimen/h3"
            android:paddingTop="@dimen/my_margin" />

        <TextView
            android:text="@string/my_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="@dimen/h3"
            android:paddingTop="@dimen/my_margin" />

    </LinearLayout>

</RelativeLayout>
